int main()
{
    float height,base,area;
    const float a = .5;
        
        printf("Enter the value of height:");
        scanf("%f",&height);
        printf("Enter the value of base:");

        scanf("%f",&base);
        area = a*height*base;
        
        printf("THE AREA OF TRIANGLE:\t%f",area);
        printf("\n\n\nTHANK YOU WACHING THIS PROGRAM!");
        return 0;
    }
